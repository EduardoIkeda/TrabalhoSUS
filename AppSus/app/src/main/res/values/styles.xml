<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- EditText -->
    <style name="EditTextStyle">
        xmlns:android="http://schemas.android.com/apk/res/android"
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:padding">14dp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:background">@drawable/rounded_background</item>
        <item name="android:inputType">text</item>
    </style>

    <!-- Buttons -->
    <style name="BaseButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/rounded_background</item>
        <item name="android:backgroundTint">@color/dark_blue</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonStyle" parent="BaseButton">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="OutlineButtonStyle" parent="BaseButton">
        <item name="android:background">@drawable/outline_rounded_background</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="ClickableTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textColorLink">@color/dark_blue</item>
    </style>

    <style name="SquaredButtonStyle" parent="BaseButton">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="SmallButtonStyle" parent="BaseButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_width">67dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- TextView -->
    <style name="TextViewTitleStyle">
        <item name="android:layout_width">310dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">145dp</item>
        <item name="android:layout_marginTop">136dp</item>
        <item name="android:layout_marginEnd">145dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewHeaderStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewSmallStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">11sp</item>
    </style>
    
    <style name="TextViewLargeStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialComponents.Circle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>